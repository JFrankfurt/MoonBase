{
  "name": "to-the-moon",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.1.2",
    "@material-ui/core": "^3.3.1",
    "@material-ui/icons": "^3.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.3.5",
    "next": "^7.0.2",
    "phaser": "^3.15.1",
    "qrcode.react": "^0.8.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-jss": "^8.6.1",
    "typescript": "^3.1.3"
  },
  "devDependencies": {
    "@grpc/proto-loader": "^0.3.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.2.19",
    "@types/next": "^7.0.3",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-jss": "^8.6.0",
    "@types/styled-jsx": "^2.2.7",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --single-quote --write \"src/**/*.{ts,tsx}\"",
      "git add"
    ]
  },
  "scripts": {
    "dev": "nodemon server/app.ts",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node production-server/server/app.js",
    "now": "now && now alias",
    "now-rm": "now rm to-the-moon --safe --yes",
    "lint": "tslint -p tsconfig.json && tslint -p tsconfig.server.json"
  }
}
